{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "outDir": "bin",
        "sourceMap": true,
        "target": "ES6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}